def main():
    t=int(input())
    for _ in range(t):
        n,k=map(int,input().split())
        w=list(map(int,input().split()))
        total=sum(w)
        w.sort()
        sum1=sum(w[:k])
        sum2=sum(w[-k:])
        diff1=abs(sum1-(total-sum1))
        diff2=abs(sum2-(total-sum2))
        print(max(diff1,diff2))
if __name__=="__main__":
    main()
